<div class="card">
  <div class="card-header">
  <h3>Add Sticker</h3>
  </div>
  <div class="card-body">
<% if !@sticker.errors.empty? %>   
   <div class = "alert alert-error">   
         
      <ul>   
         <% @sticker.errors.full_messages.each do |msg| %>   
            <li><%= msg %></li>   
         <% end %>      
      </ul>   
         
   </div>   
<% end %>   
  
<div class = "well">   
   <%= form_for @sticker do |f| %>   
      <%= f.label :category %>   
      <%= f.select(:category, options_for_select([['Diwali','Diwali'], ['Birthday','Birthday']])) %>   
      <br><br>   
      <%= f.label :image %>   
      <%= f.file_field :image %>   
      <br>   
      <%= f.submit "Save",class: "btn btn-primary" %>   
   <% end %>   
</div>
</div>